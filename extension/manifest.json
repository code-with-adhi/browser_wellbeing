{
  "manifest_version": 3,
  "name": "Browser Wellbeing Tracker",
  "description": "Monitors time spent on websites to help with digital wellbeing.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "alarms"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Browser Wellbeing Tracker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    }
  }
}
